{
  "name": "@lit-pigeon/angular",
  "version": "0.1.0",
  "description": "Angular wrapper for the Pigeon email editor web component",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lit-pigeon/core": "workspace:*",
    "@lit-pigeon/editor": "workspace:*"
  },
  "peerDependencies": {
    "@angular/core": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": false
    }
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snxstudio/unnlayer.git",
    "directory": "packages/angular"
  },
  "license": "MIT"
}
